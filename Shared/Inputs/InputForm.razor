@using System.Diagnostics.CodeAnalysis;
<div class="w-full py-2 px-3 flex flex-col items-start gap-3 mb-auto-1.5">
    @if (ChildContent != null)
    {
        <label class="text-sm text-white" for="@Id">@ChildContent</label>
    }
    <input id="@Id" @onkeyup=@((e) => KeyboardEvent?.Invoke(e)) name="@Id" @bind=Data.Value type=@Type placeholder=@Placeholder
           class="shadow outline-0 border-0 bg-zinc-700 border rounded-2xl w-full py-2 px-3 text-zinc-200 leading-tight focus:outline-none focus:shadow-outline" />
</div>

@code {
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Type { get; set; } = "text";

    [Parameter]
    public InputData Data { get; set; }

    [Parameter]
    public string Placeholder { get; set; } = string.Empty;

    [Parameter, AllowNull]
    public Action<KeyboardEventArgs> KeyboardEvent { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;
}
