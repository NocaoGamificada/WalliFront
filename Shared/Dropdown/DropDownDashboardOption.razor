<div @onclick=@(() =>
    OnSelected(Index)) class="w-full py-3 flex justify-center hover:bg-zinc-400 text-white">
    @Label
</div>

@code{
    [Parameter]
    public int Index { get; set; }

    [Parameter]
    public Action<int> OnSelected { get; set; }

    [Parameter]
    public string Label { get; set; }
}