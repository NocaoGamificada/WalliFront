<div class="flex flex-col w-full gap-1 flex justify-center items-center">
    <table class="w-full md:w-[60%]" border="1">
        <LineTable Hover=false>
            @HeaderContent
        </LineTable>
        @ChildContent
    </table>
    @PaginationContent
</div>

@code{
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment PaginationContent { get; set; }

    [Parameter]
    public RenderFragment HeaderContent { get; set; }
}