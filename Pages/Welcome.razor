@page "/"
@layout NoAuthLayout;
@inject NavigationStacker navManager;

<div class="flex flex-col h-screen w-screen items-center justify-center p-3 bg-zinc-900">
    <div class="h-[15%] w-full flex items-center justify-center">
        <img src="images/walli_logo.png" class="w-[80%] object-contain h-full" style="max-height: 100%;" />
    </div>
    <div class="h-[50%] w-full p-1 flex items-center justify-center">
        <img src="images/eye.gif" style="max-height: 100%;" class="w-full object-contain h-full"/>
    </div>
    <div class="p-1 w-full flex items-center justify-center flex-col gap-3">
        <h1 class="text-zinc-200 font-semibold">
            Descubra, monitore e proteja<br>
            a marca que você desenvolveu!
        </h1>
        <button @onclick=ClickStart class="bg-green-300 px-4 py-3 rounded-2xl h-fit md:w-[50%]">Comecar a usar o walli</button>
    </div>
</div>

@code {
    private void ClickStart()
    {
        navManager.NavigateTo("/login", false);
    }
}
